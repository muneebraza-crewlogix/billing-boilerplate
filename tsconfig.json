{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src", // ← make 'src' the base
    "paths": {
      "@/*": ["*"] // ← map '@/something' → 'src/something'
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
